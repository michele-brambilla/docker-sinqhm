#-------------------------------------------------------
# Makefile for nxfiller
#
# Mark Koennecke, April 2013
# Michele Brambilla, July 2019
#-------------------------------------------------------

OBJ=nxfiller.o datashm.o controlshm.o

.c.o:
	$(CC) -c -g -DFILLER_USER  $*.c

all: nxfiller

nxfiller: $(OBJ)
	  $(CC) -g -o nxfiller $(OBJ) -lhdf5 -lhdf5_hl -lm

clean:
	- rm *.o
	- rm nxfiller
